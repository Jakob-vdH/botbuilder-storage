{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}